node ('ibm-jenkins-slave-dind') {
    def lib = library("jenkins-library@").org.zowe.jenkins_shared_library

    def pipeline = lib.pipelines.docker.DockerPipeline.new(this)

    pipeline.admins.add("jackjia")

    pipeline.setup(
        packageName: 'org.zowe.jenkins-library.zowe-jenkins-base',
        githubTagPrefix: 'zowe-dev',
        docker: [
            url                        : lib.Constants.DEFAULT_DOCKER_REGISTRY_URL,
            usernamePasswordCredential : lib.Constants.DEFAULT_DOCKER_REGISTRY_CREDENTIAL,
            // prefix should be synced with credential
            image                      : "${lib.Constants.DEFAULT_DOCKER_IMAGE_PREFIX}/zowe-jenkins-base".toString(),
        ],
        disableArtifactory: true,
        disablePax:  true
    )

    // default build stage, dockerFile is {@code "Dockerfile"}
    pipeline.build()

    // default publish stage, image is "${lib.Constants.DEFAULT_DOCKER_IMAGE_PREFIX}/zowe-jenkins-base"
    pipeline.publish()

    // we have release stage
    pipeline.release()

    pipeline.end()
}